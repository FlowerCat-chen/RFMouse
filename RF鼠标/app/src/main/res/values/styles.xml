<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="@android:style/Theme.Holo.Light">
	</style>
	
	<style name="Transparent">
	    <item name="android:windowBackground">@color/transparent</item>
	    <item name="android:windowIsTranslucent">true</item>
	    <item name="android:windowAnimationStyle">@+android:style/Animation.Translucent</item>
	</style>
	
	
	<style name="OptionRadioButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">16dp</item>
        <item name="android:background">@drawable/radio_button_selector</item>
        <item name="android:textColor">@drawable/radio_button_text_color_selector</item>
        <item name="android:button">@null</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">false</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="ActionPrimaryButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">14dp</item>
        <item name="android:paddingBottom">14dp</item>
        <item name="android:layout_marginTop">24dp</item>
        <item name="android:background">@drawable/button_background_selector</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ActionSecondaryButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">14dp</item>
        <item name="android:paddingBottom">14dp</item>
        <item name="android:layout_marginTop">12dp</item>
        <item name="android:background">@drawable/button_secondary_background_selector</item>
        <item name="android:textColor">#1A73E8</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>
	
	

		<style name="DialogAnimation">
			<item name="android:windowEnterAnimation">@anim/dialog_fade_in</item>
			<item name="android:windowExitAnimation">@anim/dialog_fade_out</item>
		</style>

		<style name="ToastAnimation">
			<item name="android:windowEnterAnimation">@anim/slide_in_left</item>
        </style>
		
		

		<style name="OverlayDialogTheme" >
			<item name="android:windowBackground">@android:color/transparent</item>
			<item name="android:windowNoTitle">true</item>
			<item name="android:windowIsFloating">true</item>
		</style>

</resources>




