<?xml version="1.0" encoding="utf-8"?>
<ScrollView
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="@android:color/white">

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:orientation="vertical"
		android:padding="10dp">

		<TextView
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:text="分辨率设置"
			android:textSize="20sp"
			android:textStyle="bold"
			android:layout_marginBottom="10dp"/>

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_below="@id/tip_container"
			android:orientation="horizontal"
			android:gravity="center"
			android:padding="4dp"
			android:background="#FF9BF1FF"
			android:layout_marginBottom="17dp">

			<Button
				android:id="@+id/bt_exit_resolution"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="退出"
				android:background="@drawable/button_background_selector"
				android:layout_marginRight="10dp"/>

		</LinearLayout>

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="horizontal"
			android:layout_marginBottom="16dp">

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="预设分辨率:"
				android:layout_gravity="center_vertical"
				android:layout_marginEnd="8dp"/>

			<Spinner
				android:id="@+id/resolution_spinner"
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:background="@drawable/button_background_selector"/>

		</LinearLayout>

		<TextView
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:text="或自定义分辨率:"
			android:layout_marginBottom="8dp"/>

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="horizontal"
			android:layout_marginBottom="16dp">

			<EditText
				android:id="@+id/width_edittext"
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:inputType="number"
				android:hint="宽度"
				android:layout_marginEnd="8dp"/>

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="X"
				android:layout_gravity="center_vertical"
				android:layout_marginEnd="8dp"/>

			<EditText
				android:id="@+id/height_edittext"
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:inputType="number"
				android:hint="高度"/>

		</LinearLayout>

		<Button
			android:id="@+id/apply_button"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:text="应用分辨率"
			android:layout_marginBottom="8dp"
			android:background="@drawable/button_background_selector"/>

		<Button
			android:id="@+id/reset_button"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:text="恢复默认分辨率"
			android:layout_marginBottom="24dp"
			android:background="@drawable/button_background_selector"/>

		<View
			android:layout_width="match_parent"
			android:layout_height="1dp"
			android:background="#EEEEEE"
			android:layout_marginBottom="16dp"/>

		<TextView
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:text="DPI设置"
			android:textSize="18sp"
			android:textStyle="bold"
			android:layout_marginBottom="16dp"/>

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="horizontal"
			android:layout_marginBottom="16dp">

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="预设DPI:"
				android:layout_gravity="center_vertical"
				android:layout_marginEnd="8dp"/>

			<Spinner
				android:id="@+id/dpi_spinner"
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:background="@drawable/button_background_selector"/>

		</LinearLayout>

		<TextView
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:text="或自定义DPI:"
			android:layout_marginBottom="8dp"/>

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="horizontal"
			android:layout_marginBottom="16dp">

			<EditText
				android:id="@+id/dpi_edittext"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:inputType="number"
				android:hint="DPI值"/>

		</LinearLayout>

		<Button
			android:id="@+id/apply_dpi_button"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:text="应用DPI"
			android:layout_marginBottom="8dp"
			android:background="@drawable/button_background_selector"/>

		<Button
			android:id="@+id/reset_dpi_button"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:text="恢复默认DPI"
			android:layout_marginBottom="24dp"
			android:background="@drawable/button_background_selector"/>

		<TextView
			android:id="@+id/status_textview"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginTop="16dp"
			android:gravity="center"
			android:text="当前状态: 等待操作"/>

	</LinearLayout>

</ScrollView>

