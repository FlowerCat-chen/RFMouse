<?xml version="1.0" encoding="utf-8"?>
<ScrollView
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="@android:color/white">

	<LinearLayout
		android:orientation="vertical"
		android:layout_width="match_parent"
		android:layout_height="match_parent">

		<LinearLayout
			android:id="@+id/server_settings"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="vertical"
			android:background="@android:color/white"
			android:padding="16dp"
			android:layout_marginBottom="16dp">

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="服务器设置"
				android:textSize="20sp"
				android:textStyle="bold"
				android:textColor="@android:color/black"
				android:layout_marginBottom="15dp"/>

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="服务器地址"
				android:layout_marginTop="16dp"/>

			<RelativeLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:padding="12dp"
				android:background="@drawable/item_background"
				android:clickable="true"
				android:focusable="true">

				<EditText
					android:id="@+id/set_server_address"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:hint="请输入服务器地址"
					android:text="localhost"
					android:textSize="16sp"
					android:background="@null"
					android:padding="0dp"
					android:inputType="text"/>

			</RelativeLayout>

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="端口"
				android:layout_marginTop="16dp"/>

			<RelativeLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:padding="12dp"
				android:background="@drawable/item_background"
				android:clickable="true"
				android:focusable="true">

				<EditText
					android:id="@+id/set_server_port"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:hint="请输入端口号"
					android:text="4521"
					android:textSize="16sp"
					android:background="@null"
					android:padding="0dp"
					android:inputType="number"/>

			</RelativeLayout>

			<RelativeLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:padding="12dp"
				android:background="@drawable/item_background"
				android:clickable="true"
				android:focusable="true"
				android:layout_marginTop="16dp"
				android:id="@+id/sett_mgr_reconnect">

				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="自动重连"
					android:textSize="16sp"
					android:layout_centerVertical="true"/>

				<Switch
					android:id="@+id/switch_auto_reconnect"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_alignParentRight="true"
					android:layout_centerVertical="true"
					android:checked="true"/>

			</RelativeLayout>

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="重连次数(1～10次)"
				android:layout_marginTop="16dp"/>

			<RelativeLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:padding="8dp"
				android:background="@drawable/item_background"
				android:clickable="true"
				android:focusable="true"
				android:id="@+id/sett_reconnect_count">

				<SeekBar
					android:id="@+id/seek_reconnect_count"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_marginTop="8dp"
					android:thumb="@drawable/large_thumb"
					android:layout_toLeftOf="@+id/tv_reconnect_count"
					android:layout_centerVertical="true"
					android:min="1"
					android:max="10"/>

				<TextView
					android:id="@+id/tv_reconnect_count"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_alignParentRight="true"
					android:layout_centerVertical="true"
					android:text="3"
					android:layout_marginLeft="8dp"
					android:textSize="16sp"/>

			</RelativeLayout>

			<RelativeLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:padding="12dp"
				android:background="@drawable/item_background"
				android:clickable="true"
				android:focusable="true"
				android:layout_marginTop="16dp"
				android:id="@+id/sett_mgr_log">

				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="记录崩溃日志"
					android:textSize="16sp"
					android:layout_centerVertical="true"/>

				<Switch
					android:id="@+id/switch_crash_log"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_alignParentRight="true"
					android:layout_centerVertical="true"
					android:checked="true"/>

			</RelativeLayout>

			<Button
				android:id="@+id/btn_kill_server"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:text="Kill服务端"
				android:layout_marginTop="16dp"
				android:background="@drawable/button_background_selector"
				android:textColor="@android:color/white"/>

			<Button
				android:id="@+id/btn_start_server"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:text="启动服务端"
				android:layout_marginTop="16dp"
				android:background="@drawable/button_background_selector"
				android:textColor="@android:color/white"/>
			
			<Button
				android:id="@+id/btn_server_default"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:text="重置服务器设置"
				android:layout_marginTop="16dp"
				android:background="@drawable/button_background_selector"/>

		</LinearLayout>

		<View
			android:layout_width="match_parent"
			android:layout_height="1dp"
			android:background="#ccc"
			android:layout_marginTop="16dp"
			android:layout_marginBottom="16dp"/>

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="vertical"
			android:background="@android:color/white"
			android:padding="16dp"
			android:layout_marginBottom="16dp">

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="触摸注入设置"
				android:textSize="20sp"
				android:textStyle="bold"
				android:textColor="@android:color/black"
				android:layout_marginBottom="15dp"/>

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="短按时长(1～300ms)"
				android:layout_marginTop="16dp"/>

			<RelativeLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:padding="8dp"
				android:background="@drawable/item_background"
				android:clickable="true"
				android:focusable="true"
				android:gravity="center_vertical|center_horizontal"
				android:id="@+id/sett_mgr1">

				<SeekBar
					android:id="@+id/mgr_short_time"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_marginTop="8dp"
					android:thumb="@drawable/large_thumb"
					android:layout_toLeftOf="@+id/tv_mgr_short_time"
					android:layout_centerVertical="true"
					android:min="1"
					android:max="300"/>

				<TextView
					android:id="@+id/tv_mgr_short_time"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_alignParentRight="true"
					android:layout_centerVertical="true"
					android:text="0"
					android:layout_marginLeft="8dp"
					android:textSize="16sp"/>

			</RelativeLayout>

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="长按时长(1～10s)"
				android:layout_marginTop="16dp"/>

			<RelativeLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:padding="8dp"
				android:background="@drawable/item_background"
				android:clickable="true"
				android:focusable="true"
				android:gravity="center_vertical|center_horizontal"
				android:id="@+id/sett_mgr2">

				<SeekBar
					android:id="@+id/mgr_long_time"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_marginTop="8dp"
					android:thumb="@drawable/large_thumb"
					android:layout_toLeftOf="@+id/tv_mgr_long_time"
					android:layout_centerVertical="true"
					android:min="1"
					android:max="10"/>

				<TextView
					android:id="@+id/tv_mgr_long_time"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_alignParentRight="true"
					android:layout_centerVertical="true"
					android:text="0"
					android:layout_marginLeft="8dp"
					android:textSize="16sp"/>

			</RelativeLayout>

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="滚动时长(1～2000ms)"
				android:layout_marginTop="16dp"/>

			<RelativeLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:padding="8dp"
				android:background="@drawable/item_background"
				android:clickable="true"
				android:focusable="true"
				android:gravity="center_vertical|center_horizontal"
				android:id="@+id/mgr_scroll_dur">

				<SeekBar
					android:id="@+id/mgr_scroll_time"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_marginTop="8dp"
					android:thumb="@drawable/large_thumb"
					android:layout_toLeftOf="@+id/tv_mgr_scroll_time"
					android:layout_centerVertical="true"
					android:min="1"
					android:max="2000"/>

				<TextView
					android:id="@+id/tv_mgr_scroll_time"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_alignParentRight="true"
					android:layout_centerVertical="true"
					android:text="0"
					android:layout_marginLeft="8dp"
					android:textSize="16sp"/>

			</RelativeLayout>

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="上下滑动距离(%屏幕高)"
				android:layout_marginTop="16dp"/>

			<RelativeLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:padding="8dp"
				android:background="@drawable/item_background"
				android:clickable="true"
				android:focusable="true"
				android:gravity="center_vertical|center_horizontal"
				android:id="@+id/sett_mgr3">

				<SeekBar
					android:id="@+id/mgr_scroll_updown_dis"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_marginTop="8dp"
					android:thumb="@drawable/large_thumb"
					android:layout_toLeftOf="@+id/tv_mgr_scroll_updown_dis"
					android:layout_centerVertical="true"
					android:min="1"
					android:max="100"/>

				<TextView
					android:id="@+id/tv_mgr_scroll_updown_dis"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_alignParentRight="true"
					android:layout_centerVertical="true"
					android:text="0"
					android:layout_marginLeft="8dp"
					android:textSize="16sp"/>

			</RelativeLayout>

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="左右滑动距离(%屏幕宽)"
				android:layout_marginTop="16dp"/>

			<RelativeLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:padding="8dp"
				android:background="@drawable/item_background"
				android:clickable="true"
				android:focusable="true"
				android:gravity="center_vertical|center_horizontal"
				android:id="@+id/sett_mgr4">

				<SeekBar
					android:id="@+id/mgr_scroll_leftright_dis"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_marginTop="8dp"
					android:thumb="@drawable/large_thumb"
					android:layout_toLeftOf="@+id/tv_mgr_scroll_leftright_dis"
					android:layout_centerVertical="true"
					android:min="1"
					android:max="100"/>

				<TextView
					android:id="@+id/tv_mgr_scroll_leftright_dis"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_alignParentRight="true"
					android:layout_centerVertical="true"
					android:text="0"
					android:layout_marginLeft="8dp"
					android:textSize="16sp"/>

			</RelativeLayout>

			<Button
				android:id="@+id/btn_mgr_default"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:text="重置触摸注入设置"
				android:layout_marginTop="16dp"
				android:background="@drawable/button_background_selector"/>

		</LinearLayout>

	</LinearLayout>

</ScrollView>

