<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:orientation="vertical"
	android:padding="4dp">

	<LinearLayout
		android:id="@+id/key_card_body"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="vertical"
		android:background="@drawable/rounded_card_background"
		android:padding="16dp"
		android:elevation="2dp"
		android:foreground="@drawable/list_item_selector2">

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="horizontal"
			android:gravity="center_vertical">

			<TextView
				android:id="@+id/keyNameTextView"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textSize="18sp"
				android:textStyle="bold"
				android:text="按键名称"/>

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text=" ▶"
				android:textSize="18sp"
				android:id="@+id/arrow_indicator"
				android:layout_marginLeft="20dp"
				android:textColor="#FF000000"/>

		</LinearLayout>

		<LinearLayout
			android:id="@+id/actionsLayout"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="vertical"
			android:layout_marginTop="8dp"
			android:visibility="gone">

			<TextView
				android:id="@+id/shortPressTextView"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:background="@drawable/rounded_action_background_short"
				android:padding="8dp"
				android:layout_marginTop="4dp"
				android:textColor="@android:color/white"
				android:text="短按：无操作"/>

			<TextView
				android:id="@+id/longPressTextView"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:background="@drawable/rounded_action_background_long"
				android:padding="8dp"
				android:layout_marginTop="10dp"
				android:textColor="@android:color/white"
				android:text="长按：无操作"/>

		</LinearLayout>

	</LinearLayout>

</LinearLayout>

